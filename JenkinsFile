pipeline {
    agent any
    stages {
        stage('w/o Docker') {
            steps {
                echo 'Hello World'
            }
        }

        stage('w Docker') {
            agent {
                docker {
                    image 'node:18-alpine'
                    reuseNode true
                }
            }
            steps {
                sh '''
                    node --version
                    npm --version
                    npm ci
                    npm start
                '''
            }
        }
    }
}
